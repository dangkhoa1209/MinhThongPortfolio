            <a class="close" id="close-menu-mb">&times;</a>
            <div class="overlay__content">
                <a class="link-home link-home-mb linkHeaderActive" href="#">Home</a>
                <a class="link-about link-about-mb" href="#">About</a>
                <a class="link-service link-service-mb" href="#about">Services</a>
                <a class="link-portfolio link-portfolio-mb" href="#portfolio">Portfolio</a>
                <a class="link-new link-new-mb" href="#">News</a>
                <a class="link-contact link-contact-mb" href="#">Contact</a>
                <% if(!admin){ %> 
                    <a class="link-login-logout-mb" href="#" data-toggle="modal" data-target="#LoginModal">Login</a>
                <% }else{ %> 
                    <a class="link-mess-mb" href="message-management.html" target="_blank">Messager</a>
                    <a class="link-login-logout-mb" href="/logout">Logout</a>
                <% } %> 
            </div>
        </div>
        <!--Banner - Home-->
        <div class="banner" id="banner">
            <div class="boxbanner" id="boxbanner">
                <% if(infohome.kindBanner == "image"){ %> 
                    <img class="" src="/imagesSystem/banner/<%= infohome.banner %>" alt="Banner">
                <% }else{ %> 
                    <video class="videoBanner" autoplay loop muted playsinline>
                        <source src="/imagesSystem/banner/<%= infohome.banner %>" id="videologo" class="image">
                        Your browser does not support HTML5 video.
                    </video>
                <% } %>
            </div>
        </div>
        <!--About me-->
        <div class="about" id="about">
            <div class="titleAbout wow fadeInLeft">
                <div class="boxtitleAbout">
                    <div class="a">
                        <div class="line"></div>
                        <p>A</p>
                    </div>
                    <div class="b">
                        <p>BOUT ME</p>
                    </div>
                </div>
            </div>
