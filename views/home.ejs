                                <% if(!admin){ %> 
                                    <li data-toggle="modal" data-target="#LoginModal"><a href="#"><p>Login</p></a></li>
                                <% }else{ %> 
                                    <li><a href="/editpage" target="_blank"><p>Edit Page</p></a></li>
                                    <li><a href="/messagepage" target="_blank"><p>Messager</p></a></li>
                                    <li><a href="/logout"><p>Logout</p></a></li>
                                <% } %> 
                            </ul>
                        </li>
                    </ul>
                </nav>
                <p class="menu cta"><i class="fa fa-bars" aria-hidden="true"></i></i></p>
            </div>
        </div>
